@page "/StudentPag/{SId}"


@using WebApplication1.Models
@using WebApplication1.Data
@inject NavigationManager menager

@inject StudentsData Data


<h3><u>Student's details</u></h3>

<head>
    <style>
        .grid-container {
            display: grid;
            grid-gap: 10px;
            background-color: #2196F3;
            padding: 10px;
        }

        .grid-item {
            background-color: rgba(255, 255, 255, 0.8);
            text-align: center;
            padding: 20px;
            font-size: 30px;
        }

        .item1 {
            grid-column: 1 / span 2;
            grid-row: 1;
        }

        .item2 {
            grid-column: 3;
            grid-row: 1 / span 3;
        }

        .item5 {
            grid-column: 1 / span 3;
            grid-row: 3;
        }
    </style>
</head>
<body>



    <div class="grid-container">

        <div class="grid-item item2">
            <label >Avatar:</label>
            <input @bind-value="@stud.Picture">
            <br />
            <img src=@stud.Picture alt="Avatar" />
        </div>
        <div class="grid-item item3">First name: </div>
        <div class="grid-item item4"><input  @bind-value="@stud.FirstName"></div>

        <div class="grid-item item6">Last name:</div>
        <div class="grid-item item7"><input @bind-value="@stud.LastName"></div>
        <div class="grid-item item8">Birthdate</div>

        <div class="grid-item item9"><input @bind-value="@stud.Birthdate"></div>
        <div class="grid-item item10">Studies</div>
        <div class="grid-item item11"><input @bind-value="@stud.Studies"></div>
        <div class="item12"></div>
        <div class="grid-item item13"><button id="rbutton"><a href="/Students">Return</a></button></div>

    </div>


</body>

@code {
    [Parameter]
    public string SId { get; set; }
    public Student stud { get; set; }


    protected override void OnInitialized()
    {
        stud = Data.students.FirstOrDefault(e => e.Id == Int32.Parse(SId));
    }


}

